<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SharedPreferencesActivity"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_save"
        android:layout_gravity="center" />
    <Button
        android:id="@+id/button_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_read"
        android:layout_gravity="center" />
    <Button
        android:id="@+id/button_remove_by_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_remove_by_key"
        android:layout_gravity="center" />
    <Button
        android:id="@+id/button_remove_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_remove_all"
        android:layout_gravity="center" />
</LinearLayout>